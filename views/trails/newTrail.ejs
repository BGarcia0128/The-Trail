<% layout("layouts/formPage"); %>

<h1>New Trail</h1>
<form class="mt-4 needs-validation" action="/trails" method="POST" novalidate>
    <div class="mb-3">
        <label for="trailNameInput" class="form-label">Trail Name</label>
        <!-- having name="obj[prop]" in an input, creates an object in the request, useful for express/mongo -->
        <input id="trailNameInput" name="trail[name]" type="text" class="form-control" required>
        <div class="invalid-feedback">
            <p>A one line description is fine if you aren't sure.</p>
        </div>
    </div>
    <div class="mb-3">
        <label for="trailLocInput" class="form-label">Location</label>
        <input id="trailLocInput" name="trail[loc]" type="text" class="form-control" required>
        <div class="invalid-feedback">
            <p>Even if it's just the city, you can be as detailed as you like in the description.</p>
        </div>
    </div>
    <div class="mb-3 row justify-content-between">
        <div class="col-4">
            <label for="trailLengthInput" class="form-label">Length</label>
            <div class="input-group">
                <!-- <input id="trailLengthInput" name="trail[length]" type="number" step="0.1" class="form-control" required> -->
                <input id="trailLengthInput" name="trail[length]" type="text" class="form-control" required>
                <span class="input-group-text">mi</span>
                <div class="invalid-feedback">
                    <p>A guess is fine.</p>
                </div>
            </div>
        </div>
        <div class="col-4 col-xxl-3">
            <label for="trailRatingInput" class="form-label">Rating</label>
            <div class="input-group">
                <input id="trailRatingInput" name="trail[rating]" type="number" step="1" min="0" max="5" class="form-control" required>
                <span class="input-group-text">/ 5</span>
            </div>
        </div>
    </div>
    <div class="mb-3">
        <label for="trailDescInput" class="form-label">Description</label>
        <textarea id="trailDescInput" name="trail[desc]" class="form-control" rows="5" required></textarea>
    </div>
    <img class="col-12" src="https://www.mbs-plugins.com/images/drop-files-here-extra.jpg" alt="">
    <input id="" name="" type="file" class="form-control">
    <div class="mt-3 input-group">
        <span class="input-group-text">URL</span>
        <input id="imgInput" name="trail[img]" type="url" class="form-control" required>
    </div>
    <input type="submit" class="btn btn-success btn-sm my-3">

</form>
