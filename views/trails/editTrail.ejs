<% layout("layouts/formPage"); %>

<h1>Edit Trail</h1>
<form class="mt-4 needs-validation" method="POST" novalidate>
    <div class="mb-3">
        <label for="trailNameInput" class="form-label">Trail Name</label>
        <input id="trailNameInput" name="trail[name]" type="text" class="form-control" value="<%- trailToEdit.name %>" required />
        <div class="invalid-feedback">
            <p>A one line description is fine if you aren't sure.</p>
        </div>
    </div>
    <div class="mb-3">
        <label for="trailLocInput" class="form-label">Location</label>
        <input id="trailLocInput" name="trail[loc]" type="text" class="form-control" value="<%- trailToEdit.loc %>" required />
        <div class="invalid-feedback">
            <p>Even if it's just the city, you can be as detailed as you like in the description.</p>
        </div>
    </div>
    <div class="mb-3 row justify-content-between">
        <div class="col-4">
            <label for="trailLengthInput" class="form-label">Length</label>
            <div class="input-group">
                <!-- <input id="trailLengthInput" name="trail[length]" type="number" step="0.1" class="form-control" required> -->
                <input id="trailLengthInput" name="trail[length]" type="text" class="form-control" value="<%- trailToEdit.length %>" required>
                <span class="input-group-text">mi</span>
                <div class="invalid-feedback">
                    <p>A guess is fine.</p>
                </div>
            </div>
        </div>
        <div class="col-4 col-xxl-3">
            <label for="trailRatingInput" class="form-label">Rating</label>
            <div class="input-group">
                <input id="trailRatingInput" name="trail[rating]" type="number" step="1" min="0" max="5" class="form-control" value="<%- trailToEdit.rating %>" required>
                <span class="input-group-text">/ 5</span>
            </div>
        </div>
    </div>
    <div class="mb-3">
        <label for="trailDescInput" class="form-label">Description</label>
        <textarea id="trailDescInput" name="trail[desc]" class="form-control" rows="5" required><%- trailToEdit.desc %></textarea>
    </div>
    <img class="col-12" src="https://www.mbs-plugins.com/images/drop-files-here-extra.jpg" alt="">
    <div class="mt-3">
        <label for="trailImgInput" class="form-label">URL</label>
        <input id="imgInput" name="trail[img]" type="text" class="form-control" value="<%- trailToEdit.img %>" required />
    </div>
    <div class="my-3">
        <input id="updateBtn" type="submit" formaction="/trails/<%- trailToEdit._id %>?_method=PUT" class="btn btn-success btn-sm" value="Update">
        <input id="deleteBtn" type="submit" formaction="/trails/<%- trailToEdit._id %>?_method=DELETE" class="btn btn-danger btn-sm ms-3" value="Delete">
    </div>

</form>
